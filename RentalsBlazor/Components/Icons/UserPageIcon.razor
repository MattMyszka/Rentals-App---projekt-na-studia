@* UserPageIcon.razor *@
<style>
    .frame {
        background-color: transparent;
        display: flex;
        flex-direction: row;
        justify-content: center;
        width: 100%;
        height: 100%;
    }

    .user-page-icon {
        width: 64px;
        height: 64px;
        background-color: #365cbc;
        border-radius: 20px;
        overflow: hidden;
        border: 7px solid;
        border-color: #a5adc3;
    }

    .user-page-icon .user {
        position: relative;
        width: 22px;
        height: 40px;
        top: 12px;
        left: 20px;
    }

    .user-page-icon .head {
        position: absolute;
        width: 15px;
        height: 15px;
        top: 0;
        left: 4px;
        background-color: #85a0e7;
        border-radius: 7.5px;
        box-shadow: inset 4px 0px 4px #9fb4e9, 0px 4px 4px #00000040;
    }

    .user-page-icon .body {
        position: absolute;
        width: 22px;
        height: 22px;
        top: 17px;
        left: 0;
        background-color: #85a0e7;
        border-radius: 7px;
        box-shadow: inset 4px 0px 4px #9fb4e9, 0px 4px 4px #00000040;
    }

</style>

<div class="frame">
    <div class="user-page-icon-wrapper">
        <div class="user-page-icon">
            <div class="user">
                <div class="head"></div>
                <div class="body"></div>
            </div>
        </div>
    </div>
</div>

